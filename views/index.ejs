                            <div class="postname">Harry Nohara</div>
                        </div>
                        <div class="opts">...</div>
                    </div>
                    <div class="slides slide1">
                      <% if(image.img.data){%>
                        <img src="data:image/<%=image.img.contentType%>;base64,
                        <%=image.img.data.toString('base64')%>">
                      <% }else{ %>
                        <img src="/imgs/image8.jpg" alt="">
                      <%}%>
                    </div>
                    <div class="likes">
                        <span class="material-symbols-outlined" id="rad" onclick="klikaj('rad1')">
                            favorite
                        </span>
                        <form action="/comment" method="post">
                            <input type="text" class="id" name="id" value=<%= image.id %>>
                            <button type="submit" class="cm-btn">
                                <span class="material-symbols-outlined" onclick="submit">
                                    comment
                                </span>
                            </button>

                        </form>
                    </div>
                    <div class="no">260 likes</div>
                    <div class="title">From class A to One For All...</div>
                </div>
            <% }) %>
            <!-- <div class="pic"></div>
