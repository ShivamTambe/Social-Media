            <div class="pic"></div> -->
        </div>
            <nav class="navbar">
                <a href="/"><div class="navbtn">Home</div></a>
                <div class="navbtn">
                    <form action="/upload" method="post" enctype="multipart/form-data">
                        <input type="file" required name="image" class="up">
                        <button type="submit">Submit</button>
                    </form>
                    <div><%= message %></div>
                </div>
                <div class="navbtn"><a href="/Login">Login</a></div>
